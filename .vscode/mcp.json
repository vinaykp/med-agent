{
  "inputs": [
    {
      "type": "promptString",
      "id": "db_path",
      "description": "SQLite Database Path",
      "default": "${workspaceFolder}/src/db/db.sqlite"
    }
  ],
  "servers": {
    "sqlite": {
      "command": "uvx",
      "args": [
        "mcp-server-sqlite",
        "--db-path",
        "${input:db_path}"
      ]
    }
  }
}